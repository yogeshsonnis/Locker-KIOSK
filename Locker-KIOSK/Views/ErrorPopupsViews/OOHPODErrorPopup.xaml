<UserControl x:Class="Locker_KIOSK.Views.ErrorPopupsViews.OOHPODErrorPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Locker_KIOSK.Views.ErrorPopupsViews"            
             mc:Ignorable="d"       
             Background="{StaticResource HalfOpacityBrush}"
             >

    <Grid Width="1040" Height="552">
        <Border  Background="#F5F5F5" BorderBrush="#D32F2F" BorderThickness="2" CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image Height="88" Source="/Images/Error.png" Stretch="Fill" Width="88" Margin="0,64,0,0"/>
                <TextBlock Text="Sorry, OOH ID not found, Please try again." Grid.Row="1" FontSize="32" FontWeight="Bold" Foreground="#564B51" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,53,0,82"/>
                <Button Style="{StaticResource ErrorRoundButton}" Grid.Row="2" Height="80" Width="338" Content="Back" Command="{Binding BackCommand}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
