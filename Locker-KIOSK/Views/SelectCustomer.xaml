<UserControl x:Class="Locker_KIOSK.Views.SelectCustomer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Locker_KIOSK.Views"
             mc:Ignorable="d" 
            >
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="0,41,0,0">
            <TextBlock Text="I am a..."  Style="{StaticResource Textstyle}"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,43,0,0">


                <Button Style="{StaticResource IconButtonStyle}" Margin="0,0,63,0">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="/Images/Customer.png" Height="173" Width="106" Stretch="Uniform"/>
                        <TextBlock Text="Customer" Style="{StaticResource ButtonTextStyle}"  Margin="0,22,0,0"/>
                    </StackPanel>
                </Button>


                <Button Style="{StaticResource IconButtonStyle}"  Command="{Binding DeliveryNextCommand}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="/Images/DeliveryDriver.png" Width="210.39" Height="116" Stretch="Uniform"/>
                        <TextBlock Text="Delivery Driver" Style="{StaticResource ButtonTextStyle}"  Margin="0,46,0,0"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
