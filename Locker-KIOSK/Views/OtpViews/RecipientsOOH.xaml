<UserControl x:Class="Locker_KIOSK.Views.OtpViews.RecipientsOOH"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Locker_KIOSK.Views.OtpViews"
             xmlns:ErrorPopup="clr-namespace:Locker_KIOSK.Views.ErrorPopupsViews"
             xmlns:ConfirmPopup="clr-namespace:Locker_KIOSK.Views.ConfirmPopupViews"
             mc:Ignorable="d" 
             >
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <TextBlock Text="Enter recipient's OOH ID" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#217BC0" Margin="0,41,0,0"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <TextBlock Text="OOH" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" Margin="0,0,10,0"/>
            <StackPanel Orientation="Horizontal" Grid.Row="1">

                <TextBox Style="{StaticResource OTPTextBoxStyle}" MaxLength="1" x:Name="otp1" Text="{Binding Otp1}"/>
                <TextBox Style="{StaticResource OTPTextBoxStyle}" MaxLength="1"  x:Name="otp2" Text="{Binding Otp2}"/>
                <TextBox Style="{StaticResource OTPTextBoxStyle}" MaxLength="1" x:Name="otp3" Text="{Binding Otp3}"/>
                <TextBox Style="{StaticResource OTPTextBoxStyle}" MaxLength="1" x:Name="otp4" Text="{Binding Otp4}"/>

                <TextBlock Text="-" FontSize="36" VerticalAlignment="Center"  Foreground="#FF808080"/>

                <TextBox Style="{StaticResource OTPTextBoxStyle}" MaxLength="1" x:Name="otp5" Text="{Binding Otp5}"/>
                <TextBox Style="{StaticResource OTPTextBoxStyle}" MaxLength="1" x:Name="otp6" Text="{Binding Otp6}"/>
                <TextBox Style="{StaticResource OTPTextBoxStyle}" MaxLength="1" x:Name="otp7" Text="{Binding Otp7}"/>
                <TextBox Style="{StaticResource OTPTextBoxStyle}" MaxLength="1" x:Name="otp8" Text="{Binding Otp8}"/>

            </StackPanel>
        </StackPanel>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Style="{StaticResource InfoCardBorderStyle}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="70">
                <StackPanel HorizontalAlignment="Center" >
                    <TextBlock Text="Check address label" FontSize="23" Foreground="#555" HorizontalAlignment="Center" />
                    <TextBlock Text="OOH **** ****" FontSize="17" FontWeight="Bold" Foreground="#1E88E5" HorizontalAlignment="Center"/>
                    <Image Source="/Images/Box.png" Height="170" Stretch="Uniform"/>
                </StackPanel>
            </Border>
            <Grid Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" >
                    <Button Style="{StaticResource KeypadButtonStyle}" Content="1" Command="{Binding KeyCommand}" CommandParameter="1"/>
                    <Button Style="{StaticResource KeypadButtonStyle}" Content="2" Command="{Binding KeyCommand}" CommandParameter="2"/>
                    <Button Style="{StaticResource KeypadButtonStyle}" Content="3" Command="{Binding KeyCommand}" CommandParameter="3"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="1">
                    <Button Style="{StaticResource KeypadButtonStyle}" Content="4" Command="{Binding KeyCommand}" CommandParameter="4"/>
                    <Button Style="{StaticResource KeypadButtonStyle}" Content="5" Command="{Binding KeyCommand}" CommandParameter="5"/>
                    <Button Style="{StaticResource KeypadButtonStyle}" Content="6" Command="{Binding KeyCommand}" CommandParameter="6"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="2">
                    <Button Style="{StaticResource KeypadButtonStyle}" Content="7" Command="{Binding KeyCommand}" CommandParameter="7"/>
                    <Button Style="{StaticResource KeypadButtonStyle}" Content="8" Command="{Binding KeyCommand}" CommandParameter="8"/>
                    <Button Style="{StaticResource KeypadButtonStyle}" Content="9"   Command="{Binding KeyCommand}" CommandParameter="9"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="0,0,6,0">
                    <Button Style="{StaticResource KeypadButtonStyle}" Content="0" Margin="0,0,0,0" Command="{Binding KeyCommand}" CommandParameter="0"/>
                    <Button Style="{StaticResource DeleteButtonStyle}"  Command="{Binding DeleteIdCommand}"/>

                </StackPanel>

                <Button IsEnabled="{Binding IsExecute}" Style="{StaticResource RoundedButton}" Content="Confirm" Grid.Row="5" Margin="0,10,0,0" Command="{Binding ConfirmCommand}"/>
            </Grid>
        </Grid>
        <Grid Grid.RowSpan="4">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsErrorPopupVisible  }" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsErrorPopupVisible  }" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>

                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <ErrorPopup:OOHPODErrorPopup  x:Name="errorpopup"/>

        </Grid>
        <Grid Grid.RowSpan="4">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsConfirmPopupVisible}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsConfirmPopupVisible}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>

                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <ConfirmPopup:OOHPODConfirmPopup DataContext="{Binding}"/>

        </Grid>
    </Grid>
</UserControl>
