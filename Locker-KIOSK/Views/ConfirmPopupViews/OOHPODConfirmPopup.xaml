<UserControl x:Class="Locker_KIOSK.Views.ConfirmPopupViews.OOHPODConfirmPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Locker_KIOSK.Views.ConfirmPopupViews"
             mc:Ignorable="d" 
              Background="{StaticResource HalfOpacityBrush}"
           >

    <Grid Width="1040" Height="552" >
        <Border  Background="#F5F5F5" BorderBrush="#D32F2F" BorderThickness="2" CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock Text="Please confirm the following is correct:" FontSize="32" FontWeight="Bold" Foreground="#63ac39" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <TextBlock Text="OOH ID:" Grid.Row="1" FontSize="32" FontWeight="Bold" Foreground="#564b51" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!--<TextBlock Text="OOH "  FontSize="32" FontWeight="Bold" Foreground="#564b51" VerticalAlignment="Center" HorizontalAlignment="Center" />-->
                    <TextBlock Text="{Binding OOHId}"  FontSize="32" FontWeight="Bold" Foreground="#564b51" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </StackPanel>
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" >
                    <Button Style="{StaticResource ManuallButton}" Height="80"  Content="Re-Enter ID" Margin="0,0,30,0" Command="{Binding ReEnterBackCommand}"   />
                    <Button Style="{StaticResource ErrorRoundButton}"  Height="80" Width="338" Content="Confirm" Command="{Binding ConfirmNextCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
