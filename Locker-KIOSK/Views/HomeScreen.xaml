<UserControl x:Class="Locker_KIOSK.Views.HomeScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Locker_KIOSK.Views"
             mc:Ignorable="d" 
             >
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="0,41,0,0">
            <TextBlock Text="Welcome to OOH POD"  Style="{StaticResource Textstyle}"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,43,0,0">


                <Button Style="{StaticResource IconButtonStyle}"  Margin="0,0,63,0" >
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="/Images/PickUp.png" Height="170" Width="88" Stretch="Uniform"/>
                        <TextBlock Text="Pick Up" Style="{StaticResource ButtonTextStyle}" Margin="0,31,0,0"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource IconButtonStyle}" Command="{Binding DropOffNextCommand}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="/Images/DropOff.png" Width="88" Height="170" Stretch="Uniform"/>
                        <TextBlock Text="Drop Off" Style="{StaticResource ButtonTextStyle}" Margin="0,31,0,0"/>

                    </StackPanel>
                </Button>

            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
