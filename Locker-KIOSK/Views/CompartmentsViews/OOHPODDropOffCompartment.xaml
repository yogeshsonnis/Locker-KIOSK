<UserControl x:Class="Locker_KIOSK.Views.Compartments.OOHPODDropOffCompartment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Locker_KIOSK.Views.Compartments"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Drop off to compartment: 18"  Style="{StaticResource Textstyle}" Margin="0,40,0,0"/>
        <Grid Grid.Row="2" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="0" HorizontalAlignment="Right" Margin="0,0,20,0">
                <Button  Style="{StaticResource CompartmentsActionBtnStyle}" Content="Re-open" Margin="0,0,0,20"/>
            <Button  Style="{StaticResource CompartmentsReportIssue}" Content="Report an issue"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="1" HorizontalAlignment="Left" Margin="20,0,0,0">
                <Button Style="{StaticResource CompartmentsActionBtnStyle}" Content="Open bigger" Margin="0,0,0,20"/>
                <Button  Style="{StaticResource CompartmentDoneBtnStyle}" Content="Done"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
