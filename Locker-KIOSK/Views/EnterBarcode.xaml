        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="0,0,0,30">
            <TextBlock Text="Enter the digits under your barcode" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,42,0,20" Foreground="#3f79bb"/>
            <TextBox x:Name="BarCodeTextBox" Style="{StaticResource RoundTextBoxStyle}" Text="{Binding Barcode}"/>
        </StackPanel>
