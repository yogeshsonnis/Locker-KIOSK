                <Button Style="{StaticResource KeyButtonStyle}" Content="S" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="D" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="F" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="G" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="H" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="J" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="K" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="L" Click="Key_Click"/>
