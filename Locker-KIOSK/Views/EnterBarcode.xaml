                <Button Style="{StaticResource KeyButtonStyle}" Content="9" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="0" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="-" Click="Key_Click"/>
            </StackPanel>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Style="{StaticResource KeyButtonStyle}" Content="Q" Click="Key_Click"/>
