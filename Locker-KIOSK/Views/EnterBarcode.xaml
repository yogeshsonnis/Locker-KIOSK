<UserControl x:Class="Locker_KIOSK.Views.EnterBarcode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Locker_KIOSK.Views"
             mc:Ignorable="d" 
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="0,0,0,41">
            <TextBlock Text="Enter the digits under your barcode" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#3f79bb"/>
            <TextBox x:Name="BarCodeTextBox" Style="{StaticResource RoundTextBoxStyle}" />
        </StackPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" >

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Style="{StaticResource KeyButtonStyle}" Content="1" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="2" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="3" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="4" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="5" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="6" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="7" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="8" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="9" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="0" Click="Key_Click"/>
            </StackPanel>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Style="{StaticResource KeyButtonStyle}" Content="Q" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="W" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="E" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="R" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="T" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="Y" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="U" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="I" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="O" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="P" Click="Key_Click"/>
            </StackPanel>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Style="{StaticResource KeyButtonStyle}" Content="A" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="S" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="D" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="F" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="G" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="H" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="J" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="K" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="L" Click="Key_Click"/>
            </StackPanel>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Style="{StaticResource KeyButtonStyle}" Content="Z" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="X" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="C" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="V" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="B" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="N" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="M" Click="Key_Click"/>


                <Button Style="{StaticResource BackspaceButtonStyle}" Content="⌫" Width="80" Click="Back_Click"/>
            </StackPanel>
        </StackPanel>
        <Button Style="{StaticResource RoundedButton}" Command="{Binding NavigateToGridPageCommand}" Grid.Row="2" Content="Confirm" />
    </Grid>
</UserControl>
