            </StackPanel>
        </StackPanel>
        <Button Style="{StaticResource RoundedButton}"  Grid.Row="2" Content="Confirm" Margin="0,25,0,0" Command="{Binding ConfirmCommand}"/>
    </Grid>
        <Grid Grid.RowSpan="4">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsErrorPopupVisible  }" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsErrorPopupVisible  }" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>

                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <ErrorPopup:BarCodeErrorView  x:Name="errorpopup"/>

        </Grid>
    </Grid>
</UserControl>
