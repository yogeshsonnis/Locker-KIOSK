                <Button Style="{StaticResource KeyButtonStyle}" Content="E" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="R" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="T" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="Y" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="U" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="I" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="O" Click="Key_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="P" Click="Key_Click"/>
            </StackPanel>


